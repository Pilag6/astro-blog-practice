---
import MainHead from "@layouts/MainHead.astro";
import Footer from "@components/Footer.astro";
import Nav from "@components/Nav.astro";
import "@styles/global.css";

// TypeScript

interface Props {
    title: string;
    description?: string; //? means optional

}

const { title, description } = Astro.props as Props; // as Props means the props is of type Props
---

<html lang="en">
    <MainHead {title} description={description} /> 
    <body>
        <Nav />
        <main>
            <slot>Default Text</slot>
        </main>
        <Footer />
    </body>
</html>

<style>
    body {
        min-height: 100vh;
    }

    main {
        margin-top: 101px;
    }

</style>

