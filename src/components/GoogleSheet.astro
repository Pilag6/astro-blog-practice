---
const response = await fetch(
    "https://opensheet.elk.sh/14zGBELpJ1_uUSRAjKmLoYDpkMGySKLpiIQSW4XeGkH8/1"
);
const data = await response.json();
---

<section>
    <h3>Libros Leídos</h3>
    <div>
        <ul>
            {
                data.map(
                    (book: {
                        id: number;
                        titulo: string;
                        autor: string;
                        paginas: number;
                        genero: string;
                        calificacion: number;
                        imagen: string;
                    }) => (
                        <li>
                            <img src={book.imagen} alt="Hola" />
                            <div class="content">
                                <p>
                                    <span>Título: </span> {book.titulo}
                                </p>
                                <p>
                                    <span>Autor: </span>
                                    {book.autor}
                                </p>
                                <p>
                                    <span>Género: </span>
                                    {book.genero}
                                </p>
                                <p>
                                    <span>Calificación: </span>
                                    {book.calificacion}
                                </p>
                            </div>
                        </li>
                    )
                )
            }
        </ul>
    </div>
</section>

<style>
    h3 {
        text-align: center;
        font-size: 2rem;
    }
    ul {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
    }

    li {
        list-style: none;
        margin: 1rem;
        background-color: #f5f5f5;
    }

    img {
        width: 100%;
        height: 450px;
        object-fit: cover;
    }

    .content {
        padding: 1rem 1rem 1rem 1rem;

        color: #28213a;
    }

    p span {
        font-weight: bold;
    }
</style>
